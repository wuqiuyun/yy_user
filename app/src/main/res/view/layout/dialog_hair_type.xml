<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/update_hair_title"
        android:textColor="@color/alpha_80_black"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:text="@string/update_hair_hint"
        android:textColor="@color/alpha_60_black"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_hair_1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/text_bg_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/update_hair_1"
                android:textColor="@drawable/text_selector"
                android:textSize="@dimen/sp_13" />

            <RadioButton
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/rb_hair_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/text_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/update_hair_2"
                android:textColor="@drawable/text_selector"
                android:textSize="@dimen/sp_13" />

            <RadioButton
                android:id="@+id/rb_hair_3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/text_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/update_hair_3"
                android:textColor="@drawable/text_selector"
                android:textSize="@dimen/sp_13" />
        </RadioGroup>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/update_hair_no"
            android:textColor="@color/color_007AFF"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/update_hair_ok"
            android:textColor="@color/color_007AFF"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>