<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/icon_coupon_reduce"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_deduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="3"
                android:singleLine="true"
                android:text="￥15"
                android:textColor="@color/color_FFA200"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="5"
                android:singleLine="true"
                android:text="满50使用"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已抢："
                    android:textColor="@color/color_FFA200"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:id="@+id/tv_use_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="99%"
                    android:textColor="@color/color_FFA200"
                    android:textSize="@dimen/sp_8" />
            </TableRow>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp_5"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_bar_coupon" />

            <TextView
                android:id="@+id/tv_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/shape_agree_btn"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:paddingTop="@dimen/dp_2"
                android:text="立即领取 "
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>
    </LinearLayout>
</layout>