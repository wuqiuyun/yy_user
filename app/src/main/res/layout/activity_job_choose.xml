<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_bg"
        android:orientation="vertical">

        <com.yiyue.user.widget.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/update_job_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:text="@string/update_tip"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <!--职业-->
        <RadioGroup
            android:id="@+id/rg_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/rb_job_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:checked="true"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="学生"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_job_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="商务休闲"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_job_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="商务精英"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_job_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="企业管理者"
                android:textSize="@dimen/sp_15" />

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_0_1"-->
                <!--android:layout_marginEnd="@dimen/dp_15"-->
                <!--android:layout_marginStart="@dimen/dp_15"-->
                <!--android:background="@color/dark_gray" />-->

            <!--<RadioButton-->
                <!--android:id="@+id/rb_job_5"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_50"-->
                <!--android:button="@null"-->
                <!--android:background="@color/white"-->
                <!--android:drawableRight="@drawable/selector_project"-->
                <!--android:paddingRight="@dimen/dp_15"-->
                <!--android:paddingStart="@dimen/dp_15"-->
                <!--android:text="企业管理者"-->
                <!--android:textSize="@dimen/sp_15" />-->
        </RadioGroup>

        <!--脸型-->
        <RadioGroup
            android:id="@+id/rg_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/rb_face_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:checked="true"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="圆脸"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_face_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="方脸"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_face_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="瓜子脸"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_face_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="鹅蛋脸"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_face_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:button="@null"
                android:background="@color/white"
                android:drawableRight="@drawable/selector_project"
                android:paddingRight="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="尖脸"
                android:textSize="@dimen/sp_15" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_invite_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_70"
            android:background="@drawable/shape_btn"
            android:text="@string/save"
            android:textColor="@color/alpha_95_white"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>
</layout>
