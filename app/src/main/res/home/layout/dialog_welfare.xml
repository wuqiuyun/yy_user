<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignRight="@+id/rl_welfare"
        android:src="@drawable/ic_dialog_close" />

    <LinearLayout
        android:id="@+id/rl_welfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close"
        android:background="@drawable/popup_welfare"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_120"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_welfare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFF359"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/tv_welfare2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="大礼包"
                android:textColor="@color/color_white" />
        </TableRow>

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_welfare"
            android:layout_marginTop="@dimen/dp_10"
            android:text="来自美发师满满的爱"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/tv_from"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/shape_btn_yellow"
            android:gravity="center"
            android:text="立即领取"
            android:textColor="@color/color_A6122A" />
    </LinearLayout>
</RelativeLayout>
