<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_175">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/meizi" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_text_bg5"
                android:gravity="right|center_vertical"
                android:minWidth="@dimen/dp_60"
                android:paddingRight="@dimen/dp_4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_location_gray" />

                <TextView
                    android:id="@+id/tv_location_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="123m"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </TableRow>
        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="艾米"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/shape_btn_bg2"
                android:gravity="center"
                android:singleLine="true"
                android:text="总监"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_11" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_bar"
                android:isIndicator="true"
                app:mrb_secondaryProgressTint="@color/color_FFA200"
                app:mrb_progressTint="@color/color_FFA200"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:rating="3.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:singleLine="true"
                android:text="(月接单/520)"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@drawable/icon_location_gray"
            android:drawablePadding="@dimen/dp_5"
            android:text="洗剪吹138元"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</layout>
