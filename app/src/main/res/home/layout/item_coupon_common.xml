<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_FFF5F3"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="0dp"
            >

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardPreventCornerOverlap="true"
                    android:layout_gravity="center_vertical"
                    app:cardUseCompatPadding="true">
                    <ImageView
                        android:id="@+id/iv_photo"
                        android:scaleType="centerCrop"
                        android:src="@drawable/meizi"
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="@dimen/dp_85" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_rmb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/color_FFA918"
                            android:textSize="@dimen/sp_15" />
                        <TextView
                            android:id="@+id/tv_deduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:text="500"
                            android:textColor="@color/color_FFA918"
                            android:textSize="@dimen/sp_30" />
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:id="@+id/tv_amount_sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coupon_amount"
                            android:textColor="@color/color_FFA918"
                            android:textSize="@dimen/sp_15" />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:id="@+id/tv_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/coupon_stylist_limit"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_12" />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_validtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="2018/09/28到期"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_12" />
                    </TableRow>
                    <TableRow
                        android:visibility="gone"
                        android:id="@+id/tr_price"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_package_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:singleLine="true"
                            android:text="￥0.00"
                            android:textColor="@color/color_E23670"
                            android:textSize="@dimen/sp_15" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp_15"
                            android:id="@+id/tv_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:singleLine="true"
                            android:text="￥0.00"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_15" />
                    </TableRow>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>