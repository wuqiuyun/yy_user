<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_137"
        android:background="@drawable/icon_coupon_reduce"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_FFA200"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_deduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:text="100"
                android:textColor="@color/color_FFA200"
                android:textSize="@dimen/sp_30" />

            <TextView
                android:id="@+id/tv_amount_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_amount"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_25" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:text="@string/coupon_stylist_limit"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_999999" />

            <TextView
                android:id="@+id/tv_validtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="2018/09/28到期"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <Button
            android:id="@+id/bt_use"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_agree_btn"
            android:text="@string/coupon_use"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_usestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</layout>